<controls:ChildWindow x:Class="Nikon_Patch.CheckWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="300"
           Title="Alert">
    <StackPanel x:Name="LayoutRoot" Margin="2">
        <TextBox x:Name="TextBox" Text="Put alert text here" TextWrapping="Wrap"></TextBox>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="CancelButton" Content="Panic/Cancel" Width="120"  Click="CancelButton_Click" Margin="3" />
            <Button x:Name="OKButton" Content="I understand/Ok" Width="120" Click="OKButton_Click" Margin="3" />
        </StackPanel>
    </StackPanel>
</controls:ChildWindow>